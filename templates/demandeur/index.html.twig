{% extends 'base.html.twig' %}

{% block title %}Demandeur index{% endblock %}

{% block body %}
 <div class="mt-5 pt-5 col-md-8"> 
    <h1>Demandeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demandeur in demandeurs %}
            <tr>
                <td>{{ demandeur.id }}</td>
                <td>{{ demandeur.username }}</td>
                <td>{{ demandeur.password }}</td>
                <td>
                    <a href="{{ path('demandeur_show', {'id': demandeur.id}) }}">show</a>
                    <a href="{{ path('demandeur_edit', {'id': demandeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demandeur_new') }}">Create new</a>
    </div>
{% endblock %}
