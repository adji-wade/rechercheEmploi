{% extends 'base.html.twig' %}

{% block title %}CV index{% endblock %}

{% block body %}
<div class="mt-5 pt-5 col-md-8">
    <h1>CV index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Address</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Specialite</th>
                <th>NiveauEtude</th>
                <th>Experience</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c_v in c_vs %}
            <tr>
                <td>{{ c_v.id }}</td>
                <td>{{ c_v.nom }}</td>
                <td>{{ c_v.prenom }}</td>
                <td>{{ c_v.age }}</td>
                <td>{{ c_v.address }}</td>
                <td>{{ c_v.email }}</td>
                <td>{{ c_v.telephone }}</td>
                <td>{{ c_v.specialite }}</td>
                <td>{{ c_v.niveauEtude }}</td>
                <td>{{ c_v.experience }}</td>
                <td>
                    <a href="{{ path('c_v_show', {'id': c_v.id}) }}">show</a>
                    <a href="{{ path('c_v_edit', {'id': c_v.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cv_new') }}">Create new</a>
    </div>
{% endblock %}
